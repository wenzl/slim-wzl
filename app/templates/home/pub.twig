{% extends 'home/layout.twig' %}
{% set title = '个人信息 ' %}
{% block title %}{{ title }}{% endblock %}
{% block sidebar %}{% endblock %}
{% block content %}
    <div id="main" class="span11">
        <div id="first-title">
            <h1>发布一篇文章</h1>
        </div>
        <div class="row">
            <section id="main-section" class="span8">
                <div class="alert alert-error" id="alert-error" style="display:none;">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h3>Whoops! There's something wrong ... Please revise your submission and try again</h3>
                    <ul id="txt_err">
                        <li></li>
                    </ul>
                </div>
                <form method="POST" name="modulo" enctype="multipart/form-data" onsubmit="return crtl_form_submit_theme('add')">
                    <fieldset>
                        <label for="title"><span class="bold">标题</span></label>
                        <input id="title" name="title" type="text" placeholder="" value="" class="span6" maxlength="50">
                        <span class="help-block">最多50个字</span>
                    </fieldset>
                    <fieldset>
                        <label><span class="bold">漂亮的封面</span></label>
                        <div class="col-sm-5">
                            <a href="#" class="thumbnail">
                                <img data-src="holder.js/100%x180" alt="100%x180" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 180px; width: 100%x; display: block;">
                            </a>
                        </div>
                        <p>选择一张展示的封面<strong>720px</strong> * <strong>400px</strong></p>
                        <input type="file" name="file" class="btn higher">
                    </fieldset>
                    <fieldset>
                        <label for="description"><span class="bold">文章摘要</span></label>
                        <textarea id="description" name="description" rows="6" class="span5"></textarea>
                    </fieldset>
                    <fieldset>
                        <label for="description"><span class="bold">文章内容</span></label>
                        <textarea id="description" name="description" rows="6" class="span5"></textarea>
                        <span class="help-block">支持Markdown和HTML格式</span>
                    </fieldset>
                    <fieldset>
                        <label for="date"><span class="bold">创建时间</span></label>
                        <input id="date" name="date" type="text" placeholder="" value="" class="span6" maxlength="10">
                        <span class="help-block">时间格式：2016/10/29 21:03:59</span>
                    </fieldset>
                    <fieldset>
                        <label><span class="bold">文章类型</span></label>
                        <select name="cms">
                            <option value="1">Wordpress</option>
                            <option value="2">Joomla!</option>
                            <option value="3">Drupal</option>
                            <option value="4">Magento</option>
                            <option value="5">Tumblr</option>
                            <option value="6">Ghost</option>
                            <option value="7">Other</option>
                        </select>
                    </fieldset>
                    <fieldset>
                        <label><span class="bold">特征标签</span></label>
                        <select multiple="multiple" id="kind" name="kind[]">
                            <option value="1">Blog</option>
                            <option value="2">News/Magazine</option>
                            <option value="3">Portfolio/Personal</option>
                            <option value="4">Photography</option>
                            <option value="5">Ecommerce</option>
                            <option value="6">Community</option>
                            <option value="7">Forum</option>
                        </select>
                        <span class="help-block">Multiple categories are allowed</span>
                    </fieldset>
                    <fieldset>
                        <label for="price"><span class="bold">Price </span></label>
                        <input id="price" name="price" type="text" placeholder="" value="" class="span1" maxlength="3">
                        <span class="help-block">e.g. Enter "45" for 45 US dollars or "0" if it is free</span>
                    </fieldset>
                    <fieldset>
                        <label><span class="bold">其他</span></label>
                        <label class="checkbox">
                            <input type="checkbox" value="1" name="responsive">
                            打赏 <strong>支付宝&微信</strong>
                        </label>
                    </fieldset>
                    <fieldset>
                        <label><span class="bold">Just few seconds more...</span></label>
                        <label class="checkbox">
                            <input type="checkbox" value="1" name="condition">
                            Ok, one last field! Please be sure that all the details you've entered are correct (we will revise them anyway). Then we'll review your submission for acceptance into the <strong>Themeclue gallery</strong>. Thanks for your time, check this field and click on "submit"!
                        </label>
                    </fieldset>
                    <fieldset>
                        <button type="submit" class="btn btn-primary">SUBMIT</button>
                    </fieldset>
                </form>
            </section>

            <section id="r-sidebar" class="span3">
                <div id="rules">
                    <h4>SOME BASIC RULES</h4>
                    <ul class="tips">
                        <li><strong>You must be the author</strong> of the theme you're submitting</li>
                        <li>Provide a <strong>full and honest description</strong> of your theme</li>
                        <li>Allowed <strong>HTML tags</strong> for the <strong>Description</strong> are: p, a, br, hr, strong, em, h2, h3, h4, h5, h6, blockquote, pre, code, ul, ol, li.</li>
                        <li>Upload a representative and attractive <strong>screenshot</strong> of your theme, it will be the preview image</li>
                        <li>Don't post <strong>inappropriate content</strong> (e.g. illegal, offensive, racist, pornographic, etc.)</li>
                    </ul>
                </div><!-- rules -->
            </section><!-- r-sidebar -->
        </div><!-- row -->
    </div>
{% endblock %}